{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/add-prompt-context.py"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Read|Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/block-archived.py"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/block-npm-run-dev.py"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(npm create:*)",
      "Bash(npm run build:*)",
      "Bash(npm run type-check:*)",
      "Bash(mkdir:*)",
      "Bash(cat:*)",
      "Bash(node scripts/convertDMXCollections.js:*)",
      "Bash(git mv:*)",
      "Bash(node scripts/analyzePolyphony.js:*)",
      "Bash(node scripts/convertMIDIToPattern.js:*)",
      "Bash(node scripts/testVelocityLoad.js:*)",
      "Bash(node scripts/testVelocityLoad.cjs:*)",
      "Bash(npm run)",
      "Bash(tree:*)"
    ],
    "deny": [
    ],
    "ask": []
  }
}
